- title (params[:search] || 'Wordtree').titleize

#toolbar
  = form_tag terms_path, method: :get do
    %fieldset
      = label_tag :search, 'Term:'
      = text_field_tag :search, params[:search]
    %fieldset.options
      %input{type: :range, min: 1, max: 200, step: 10, name: :occurs, value: params[:occurs]}
      = label_tag :depth, 'Depth:'
      = select_tag :depth, options_for_select(1..5, params[:depth] || 3)
      = label_tag :branching, 'Branching:'
      = select_tag :branching, options_for_select([5, 20, 50, 100, 200, 400, 1000], params[:branching] || 20)

