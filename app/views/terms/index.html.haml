- title (params[:search] || 'Wordtree').titleize

#toolbar
  = form_tag terms_path, method: :get do
    %fieldset
      = label_tag :search, 'Term:'
      = text_field_tag :search, params[:search]
      = submit_tag 'Search'
    %fieldset.advanced
      .field
        = label_tag :level, 'Level'
        = select_tag :level, options_for_select(['All', 1, 2, 3, 4])
      .field
        = label_tag :level, 'Genre'
      .field
        = label_tag :level, 'Discipline'
      #status
        %p.status
  %button.advanced Filter for Discipline/Genre/Level

#wordtree

= raw @word.body unless @word.nil?
