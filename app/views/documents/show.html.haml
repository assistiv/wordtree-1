- title @document.title_fmd

#wordtree
  %h2 Wordtree
  = form_for document_url(@document), :method => :get do |f|
    %label
      %span Keyword
      = text_field_tag :q
    %label
      %span Depth
      = select_tag :depth, options_for_select([1,2,3,4])
    = submit_tag 'Go'
  #canvas

%article#text
  %h2 Transcript
  %section.transcript= @document.text

%article#text
  %h2 Term Frequencies
  %section
    %table
      %thead
        %tr
          %th Term
          %th{:colspan => 2} Frequency
      %tbody
        - @document.terms.group(:name).select('name, count(terms.id) AS cnt').order('cnt DESC').each do |t|
          %tr
            %td= t.name
            %td= t.cnt 
            %td
              %span{:style => "width:#{t.cnt}px"}
