- title @document.title_fmd

#wordtree
  %h2 Wordtree
  = form_for document_url(@document), :method => :get do |f|
    %label
      %span Keyword
      = text_field_tag :q, params[:q]
    %label
      %span Branches
      = select_tag :depth, options_for_select([1,2,3,4,5,6], 2)
    %label
      %span Threshold
      = select_tag :threshold, options_for_select([1,2,3,4,5,6], 2)
    %label
      %span Orientation
      %input{:type => :radio, :name => :dir, :value => :pre} Left
      %input{:type => :radio, :name => :dir, :value => :post, :selected => :selected} Right
    %label
      %span Order
      %input{:type => :radio, :name => :dir, :value => :pre} Alphabetical
      %input{:type => :radio, :name => :dir, :value => :post} Frequency
  #canvas


%article#text
  %h2 Transcript
  %section.transcript
    = raw @document.text

%article#text
  %h2 Term Frequencies
  %section
    %table
      %thead
        %tr
          %th Term
          %th{:colspan => 2} Frequency
      %tbody
        %tr
          %td= #t.name
          %td= #t.cnt 
          %td
